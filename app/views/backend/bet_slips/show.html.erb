<div class="content-heading">
    <div>
        <span>BetSlip #<%= @bet_slip.id %></span>
        <small>BetSlip #<%= @bet_slip.id %></small>
    </div>
</div>


<div class="row">
  <div class="block-center mt-xl wd-xxl">
    <div class="card mb3 border-danger">
        <div class="card-header bg-danger">
          <div class="card-title">
            <span class="float-left"> BetSlip #<%= @bet_slip.id %> </span>
            <span class="float-right"> <%= @bet_slip.status %> </span>
          </div>
        </div>
        <div class="card-wrapper">
          <div class="card-body">
                <div class="container" id="">
                    <% @bets = @bet_slip.bets %>
                    <% @bets.each do |bet| %>
                      <% fixture = Fixture.find(bet.fixture_id)%>
                      <% line_bet = LineBet.where(fixture_id: bet.fixture_id) %>
                      <fieldset>
                        <div>
                          <div>
                            <span><strong>Fixture:</strong></span>
                            <span class="float-right"> <%= fixture.part_one_name %> - <%= fixture.part_two_name %></span>
                            <br>
                          </div>
                          <div>
                            <span><strong>Odds:</strong></span>
                            <span class="float-right"><%= bet.odds %></span>
                          </div>
                          <div>
                            <span><strong>Tournament:</strong></span>
                            <span class="float-right"><%= fixture.league_name %></span>
                          </div>
                          <div>
                            <span><strong>Outcome:</strong></span>
                            <span class="float-right"><%= bet.outcome_desc %></span>
                          </div>
                          <div>
                            <span><strong>Start Time:</strong></span>
                            <span class="float-right"><%= local_time(fixture.start_date, format: "%d/%m/%Y %l:%M%P") %></span>
                          </div>
                          <div>
                            <span><strong>Status:</strong></span>
                            <span class="float-right"><%= bet.status %></span>
                          </div>
                          <div>
                            <span><strong>Result:</strong></span>
                            <% if bet.result.nil? %>
                              <span class="float-right">N/A</span>
                            <% else %>
                              <span class="float-right"><%= bet.result %></span>
                            <% end %>
                            </div>
                        </div>
                      </fieldset>
                    <% end %>

                    <div class="">
                      <div>
                         <span><strong>Total Odds:</strong></span>
                         <span class="float-right"><%= @bet_slip.odds%></span>
                      </div>
                      <div>
                         <span><strong>Ticket Stake:</strong></span>
                         <span class="float-right">UGX <%= @bet_slip.stake  %></span>
                      </div>
                      <div>
                         <span><strong>Win Amount:</strong></span>
                         <span class="float-right">UGX <%= @bet_slip.win_amount %></span>
                      </div>
                      <div>
                         <span><strong>Bonus:</strong></span>
                         <span class="float-right">UGX <%= @bet_slip.bonus %></span>
                      </div>
                      <div>
                         <span><strong>Tax:</strong></span>
                         <span class="float-right">UGX <%= @bet_slip.tax %></span>
                      </div>
                      <div>
                         <span><strong>Payout:</strong></span>
                         <span class="float-right">UGX <%= @bet_slip.payout %></span>
                      </div>
                    </div>
                </div>
                <br>
                <div class="clearfix">
                   <div class="float-right">
                      <%= link_to 'Back', backend_bet_slips_path, class: "btn btn-danger btn-sm mb-2" %>
                   </div>
                </div>
          </div>
        </div>
    </div>
  </div>
</div>
