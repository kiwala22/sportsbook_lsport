<div class="content-heading">
    <div>
        <span>Fixtures</span>
        <small>Fixtures</small>
    </div>
</div>

<div class="table-responsive container-fluid">
  <!-- table table-striped table-bordered table-hover -->
  <table class="table table-striped table-bordered table-hoverlarge-12 columns large-centered">
    <thead>
      <tr>
        <th>No</th>
        <th>Event ID</th>
        <th>Time</th>
        <th>Live Odds</th>
        <th>Status</th>
        <th>Tournament Round</th>
        <th>Betradar ID</th>
        <th>Season ID</th>
        <th>Season Name</th>
        <th>Tournament ID</th>
        <th>Tournament Name</th>
        <th>Sports ID</th>
        <th>Sports</th>
				<th>Category ID</th>
        <th>Category</th>
        <th>Comp One ID</th>
        <th>Comp One Name</th>
        <th>Comp One Gender</th>
        <th>Comp One Abb</th>
        <th>Comp Two ID</th>
        <th>Comp Two Name</th>
        <th>Comp Two Gender</th>
        <th>Comp Two Abb</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
			<% @fixtures.each_with_index do |fixture, i| %>
				<tr>
					<td><%= (i+1)%></td>
					<td><%= fixture.event_id %></td>
					<td><%= fixture.scheduled_time.to_datetime.strftime("%b %d, %Y %I:%M%P") %></td>
					<td><%= fixture.live_odds %></td>
					<td><%= fixture.status %></td>
					<td><%= fixture.tournament_round %></td>
          <td><%= fixture.betradar_id%></td>
					<td><%= fixture.season_id%></td>
					<td><%= fixture.season_name %></td>
					<td><%= fixture.tournament_id %></td>
          <td><%= fixture.tournament_name %></td>
          <td><%= fixture.sport_id %></td>
          <td><%= fixture.sport %></td>
					<td><%= fixture.category_id %></td>
          <td><%= fixture.category%></td>
          <td><%= fixture.comp_one_id%></td>
          <td><%= fixture.comp_one%></td>
          <td><%= fixture.comp_one_gender%></td>
          <td><%= fixture.comp_one_abb%></td>
          <td><%= fixture.comp_two_id%></td>
          <td><%= fixture.comp_two%></td>
          <td><%= fixture.comp_two_gender%></td>
          <td><%= fixture.comp_two_abb%></td>
          <td>Action</td>
				</tr>
			<% end %>
    </tbody>
  </table>
	<%= paginate @fixtures %>
</div>
