<% provide(:title, "Featured Games") %>

<!-- Start Featured Fixtures Table -->

    <div class="game-box" id="featured">
        <div class="card">
            <div class="card-header">
                <h3>Featured Fixtures - Soccer <i class='fas fa-fire fa-lg fa-fw mr-2 match-time'></i></h3>
            </div>
            
            <div class="card-body">
                <div class="tab-content" id="">
                    <% if @featured.present? %>
                        <div class="tab-pane fade show active" id="#home" role="tabpanel" aria-labelledby="home-tab" data-controller="match-fixtures">
                            <table class="table table-borderless ">
                                <thead>
                                    <tr>
                                        <th class="col-1">Date</th>
                                        <th class="col-4">Teams</th>
                                        <th class="col-4">Tournament</th>
                                        <th class="col-1">1</th>
                                        <th class="col-1">X</th>
                                        <th class="col-1">2</th>
                                    </tr>
                                </thead>
                                <tbody id="fixture-table-body" data-target="match-fixtures.fixtures" data-controller="refresh fixture-channel pre-odds-channel"  data-refresh-interval="60000" data-refresh-url="<% page_refresh_path %>" data-refresh-method="GET">
                                    <%= render partial: 'feat_pre_match_fixture_table', locals: {featured: @featured} %>
                                </tbody>
                            </table>
                            <div id="bottom">
                                <!-- <div class="d-flex justify-content-center event">
                                    <div data-target="match-fixtures.spinner" id="spinner"></div>
                                </div> -->
                                <div class="table-navigation"  data-target="match-fixtures.pagination" id="paginate">
                                    <%== pagy_nav(@pagy) %>
                                </div>    
                            </div>
                        </div>
                    <% else %>
                        <div class="card-body">
                            
                            <h6 class="event">No Featured Matches</h6>
                                
                        </div>
                    <% end %>
                </div>
                
            </div>
            
        </div>
    </div>

<!-- End Featured Fixtures Table -->