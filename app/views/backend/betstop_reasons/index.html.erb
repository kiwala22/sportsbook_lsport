<div class="content-heading">
    <div>
        <span>Betstop Reasons</span>
        <small>Betstop Reasons</small>
    </div>
</div>

<div class="table-responsive">
  <!-- table table-striped table-bordered table-hover -->
  <table class="table table-striped table-bordered table-hoverlarge-12 columns large-centered">
    <thead>
      <tr>
        <th>No</th>
        <th>Betstop Reason ID</th>
        <th>Description</th>
        <th>Time</th>
      </tr>
    </thead>
    <tbody>
			<% @betstop_reasons.each_with_index do |betstop_reason, i| %>
				<tr>
					<td><%= (i+1)%></td>
					<td><%= betstop_reason.betstop_reason_id %></td>
					<td><%= betstop_reason.description %></td>
          <td><%= local_time(betstop_reason.created_at, format: "%d/%m/%y %l:%M%P") %></td>
				</tr>
			<% end %>
    </tbody>
  </table>
	<%= paginate @betstop_reasons %>
</div>
