<div class="content-heading">
    <div>
        <span>Match Statuses</span>
        <small>Match Statuses</small>
    </div>
</div>

<div class="table-responsive">
  <!-- table table-striped table-bordered table-hover -->
  <table class="table table-striped table-bordered table-hoverlarge-12 columns large-centered">
    <thead>
      <tr>
        <th>No</th>
        <th>Match Status ID</th>
        <th>Description</th>
        <th>Sports</th>
        <th>Time</th>
      </tr>
    </thead>
    <tbody>
			<% @match_statuses.each_with_index do |match_status, i| %>
				<tr>
					<td><%= (i+1)%></td>
					<td><%= match_status.match_status_id %></td>
					<td><%= match_status.description %></td>
          <td><%= match_status.sports %></td>
					<td><%= match_status.created_at.to_datetime.strftime("%b %d, %Y %I:%M%P") %></td>
				</tr>
			<% end %>
    </tbody>
  </table>
	<%= paginate @match_statuses %>
</div>
