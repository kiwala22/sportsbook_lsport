<div class="clear-slip"><%= link_to  "Remove All", clear_slip_path , remote: true, method: :delete %></div>
<div class="bets" id = "bets-row">
   <% if !@cart.nil? && @cart.line_bets.present?  %>
      <% @cart.line_bets.each do |bet| %>
            <% if fetch_market_status(bet.market, bet.fixture_id) == "Active" %>
               <div class="single-bet">
                  <span id="comp-names"><span> <%= bet.fixture.comp_one_name %></span><span> <%= bet.fixture.comp_two_name %></span></span>
                  <span><%= fetch_current_odd(bet.market, bet.fixture_id, bet.outcome) %></span>
               </div>
            <% end %>
      <% end %>
      <div class="total-bet">
         <span > <%= text_field_tag "Stake", nil, placeholder: " Stake Amount" ,id: "stake-input" %> </span>
         <span id="total-odds"><%= @cart.line_bets.pluck(:odd).map(&:to_f).inject(:*).round(2) unless @cart.line_bets.count == 0  %></span>
      </div>
      <div class="total-wins">
         <span>Possible Win Amount</span>
         <span id="total-wins"> </span>
         
      </div>
      <div clas="actions">
         <% if user_signed_in? %>
            <%= button_to "Place Bet", bet_slips_path, method: "post", remote: true, params: {cart: @cart.id}, class: "btn btn-block btn-primary mt-lg login-btn"  %>
         <% else %>
            <%= button_to "Login", new_user_session_path, method: "post", params: {cart: @cart.id}, class: "btn btn-block btn-primary mt-lg login-btn"  %>
         <% end %>
      </div>
   <% end %>
</div>
