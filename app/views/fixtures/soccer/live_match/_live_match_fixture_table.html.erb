<% fixtures.each do |fixture| %>
   <% if fixture.market1_live.present? && fixture.market1_live.status == "Active" %>
      <tr>
            <td>
               <a href=<%=fixtures_soccer_live_path(id: fixture.id) %>>
                  <%= fixture.scheduled_time.strftime("%H:%M:%S ") %> <br>
                  <%= fixture.scheduled_time.strftime("%d/%m/%y") %>
               </a>
            </td>
            <td>
               <%= link_to fixtures_soccer_live_path(id: fixture.id) do  %>
                  <strong><%= fixture.comp_one_name %><span><%= fixture.home_score %></span></strong>
                  <strong><%= fixture.comp_two_name %><span><%= fixture.away_score %></span></strong>
               <% end %>
            </td>
            <td>
               <a href=<%=fixtures_soccer_lives_path(id: fixture.id) %>>
                  <%= fixture.tournament_name %> <br>
                  <%= fixture.category %>
               </a>
            </td>
            <td>
               <%= link_to(fixture.market1_live.outcome_1, add_bet_path(outcome_id: "1", fixture_id: fixture.id, market: "Market1Live", outcome_desc: "1X2 FT - 1") , class: "btnn intialise_input",id:'odd1', remote: true, method: :post )%>
            </td>
            <td>
               <%= link_to(fixture.market1_live.outcome_2, add_bet_path(outcome_id: "2", fixture_id: fixture.id, market: "Market1Live", outcome_desc: "1X2 FT - X") , class: "btnn intialise_input", id:'odd2',remote: true, method: :post )%>
            </td>
            <td>
               <%= link_to(fixture.market1_live.outcome_3, add_bet_path(outcome_id: "3", fixture_id: fixture.id, market: "Market1Live", outcome_desc: "1X2 FT - 2") , class: "btnn intialise_input", id:'odd3', remote: true, method: :post )%>

            </td>
      </tr>

   <% end %>
<% end %>
