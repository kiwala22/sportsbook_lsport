<div class="game-box">
    <div class="card">
        <div class="card-header">
            <h3>Pre-Match Fixtures</h3>
        </div>
        <div class="card-body">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <%= link_to "Today", fixtures_soccer_pres_path(:'q[scheduled_time_gteq]' => Time.now, :'q[scheduled_time_lteq]' => (Date.today.end_of_day + 1.day), :'q[status_eq]' => "not_started", :'q[sport_id_eq]' => "sr:sport:1", :'q[category_id_not_eq]' => "sr:category:1033"), remote: true, class: "nav-link active", id: "home-tab" %>
                </li>
                <li class="nav-item">
                    <%= link_to (Date.today + 1.days).strftime("%d-%m-%y") , fixtures_soccer_pres_path(:'q[scheduled_time_gteq]' => (Date.today.beginning_of_day + 1.day), :'q[scheduled_time_lteq]' => (Date.today.end_of_day + 1.day), :'q[status_eq]' => "not_started", :'q[sport_id_eq]' => "sr:sport:1", :'q[category_id_not_eq]' => "sr:category:1033"), remote: true, class: "nav-link", id: "home-tab" %>
                </li>
                <li class="nav-item">
                    <%= link_to (Date.today + 2.days).strftime("%d-%m-%y"), fixtures_soccer_pres_path(:'q[scheduled_time_gteq]' => (Date.today.beginning_of_day + 2.day), :'q[scheduled_time_lteq]' => (Date.today.end_of_day + 2.day), :'q[status_eq]' => "not_started", :'q[sport_id_eq]' => "sr:sport:1", :'q[category_id_not_eq]' => "sr:category:1033") ,remote: true, class: "nav-link", id: "home-tab" %>
                </li>
                <li class="nav-item">
                    <%= link_to "Live", fixtures_soccer_pres_path, remote: true, class: "nav-link", id: "live-tab" %>
                </li>

            </ul>
        
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <table class="table table-borderless ">
                        <thead>
                            <tr>
                                <th class="col-1">Date</th>
                                <th class="col-4">Teams</th>
                                <th class="col-4">Tournament</th>
                                <th class="col-1">1</th>
                                <th class="col-1">X</th>
                                <th class="col-1">2</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @fixtures.each do |fixture| %>
                                <% if fixture.market1_pre.present? && fixture.market1_pre.status == "Active" %>
                                    <tr>
                                        <td>
                                            <a href=<%=fixtures_soccer_path(id: fixture.id) %>>
                                                <%= fixture.scheduled_time.strftime("%H:%M:%S ") %> <br>
                                                    <%= fixture.scheduled_time.strftime("%d/%m/%y") %>
                                            </a>
                                        </td>
                                        <td><a href=<%=fixtures_soccer_path(id: fixture.id) %>><strong><%= fixture.comp_one_name %></strong>  <strong><%= fixture.comp_two_name %></strong> </a> </td>
                                        <td>
                                            <a href=<%=fixtures_soccer_path(id: fixture.id) %>>
                                                <%= fixture.tournament_name %> <br>
                                                    <%= fixture.category %>
                                            </a>
                                        </td>
                                        <td>
                                            <%= link_to(fixture.market1_pre.outcome_1, add_bet_path(outcome_id: "1", fixture_id: fixture.id, market: "Market1Pre") , class: "btnn", remote: true, method: :post )%>
                                        </td>
                                        <td>
                                            <%= link_to(fixture.market1_pre.outcome_2, add_bet_path(outcome_id: "2", fixture_id: fixture.id, market: "Market1Pre") , class: "btnn", remote: true, method: :post )%>
                                        </td>
                                        <td>
                                            <%= link_to(fixture.market1_pre.outcome_3, add_bet_path(outcome_id: "3", fixture_id: fixture.id, market: "Market1Pre") , class: "btnn", remote: true, method: :post )%>
                                        </td>
                                    </tr>

                                    <% end %>
                                <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>