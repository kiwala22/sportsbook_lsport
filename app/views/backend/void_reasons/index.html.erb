<div class="content-heading">
    <div>
        <span>Void Reasons</span>
        <small>Void Reasons</small>
    </div>
</div>

<div class="table-responsive">
  <!-- table table-striped table-bordered table-hover -->
  <table class="table table-striped table-bordered table-hoverlarge-12 columns large-centered">
    <thead>
      <tr>
        <th>No</th>
        <th>Void Status ID</th>
        <th>Description</th>
        <th>Time</th>
      </tr>
    </thead>
    <tbody>
			<% @void_reasons.each_with_index do |void_reason, i| %>
				<tr>
					<td><%= (i+1)%></td>
					<td><%= void_reason.void_reason_id %></td>
					<td><%= void_reason.description %></td>
					<td><%= void_reason.created_at.localtime.to_datetime.strftime("%b %d, %Y %I:%M%P") %></td>
				</tr>
			<% end %>
    </tbody>
  </table>
	<%= paginate @void_reasons %>
</div>
