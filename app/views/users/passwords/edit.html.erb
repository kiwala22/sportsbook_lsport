<div class="login">
   <div class="content-center cl-grey">
      <div class="row justify-content-center">
         <div class="col-xl-7 col-lg-7 col-md-7 col-sm-12">

            <div class="web-sidebar-widget login-widget">
               <div class="widget-head">
                    <h3>Change your password</h3>
               </div>
              <div class="widget-body" >
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  <%= f.hidden_field :reset_password_token %>
                  <p>Please enter a minimum of 8 characters</p>
                  <div class="form-group" data-controller="toggle">
                    <%= f.label :password, "New password" %><br />
                    <%= f.password_field :password, autofocus: true,class: 'form-control', autocomplete: "new-password", id: 'password_reset', "data-target":"toggle.unhide" %>
                          <i  class="fa fa-eye mobile-show"data-target="toggle.show" data-action="click->toggle#password" aria-hidden="true" ></i>
                  </div>

                  <div class="form-group " data-controller="toggle">
                    <%= f.label :password_confirmation, "Confirm new password" %><br />
                    <%= f.password_field :password_confirmation,class: 'form-control' ,autocomplete: "new-password", id: 'password_confirmation_reset', "data-target":"toggle.unhide" %>
                        <i  class="fa fa-eye mobile-show"data-target="toggle.show" data-action="click->toggle#password" aria-hidden="true" ></i>
                  </div>
                  <hr>
                  <div class="actions">
                    <%= f.button "Change my password", class: 'btn btn-block btn-primary mt-lg login-btn', data: {disable_with: "<i class='fas fa-spinner fa-spin'></i> Submitting...".html_safe } %>
                  </div>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
