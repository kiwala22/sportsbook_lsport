<div class="content-heading">
    <div>
        <span>Signup Bonuses</span>
        <small>Bonuses</small>
    </div>
</div>


<div class="table-responsive">
	<table class="table table-striped table-bordered table-hoverlarge-12 columns large-centered">
		<thead>
			<tr>
				<th>No #</th>
				<th>Amount</th>
				<th>Expiry</th>
				<th>Status</th>
				<th>Created At</th>
				
			</tr>
		</thead>
		<tbody>
			<% @signup_bonuses.each_with_index do |bonus, index| %>
			<tr>
				<td><%= (index + 1) %></td>
				<td><%= bonus.amount %></td>
				<td><%= local_time(bonus.expiry,"%d/%m/%Y %H:%M") %></td>
				<td>
					<% if bonus.status == 'Active'%>
						<span class="badge badge-success"><%= bonus.status %></span>
					<%else%>
						<span class="badge badge-danger"><%= bonus.status %></span>
					<%end%>

					</td>
				<td><%= local_time(bonus.created_at, "%d/%m/%Y %H:%M") %></td>
			</tr>
			<% end %>
		</tbody>
	</table>

</div>