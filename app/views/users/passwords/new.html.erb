<div class="login">
   <div class="content-center cl-grey">
      <div class="row justify-content-center">
         <div class="col-xl-7 col-lg-7 col-md-7 col-sm-12">

            <div class="web-sidebar-widget login-widget">
               <div class="widget-head">
                    <h3>Forgot password?</h3>
               </div>
              <div class="widget-body">

              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="form-group">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
                </div>

                <div class="actions">
                  <%= f.button( "Send me reset password instructions", class: 'btn btn-block btn-primary mt-lg login-btn', data: {disable_with: "<i class='fas fa-spinner fa-spin'></i> Sending...".html_safe }) %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
