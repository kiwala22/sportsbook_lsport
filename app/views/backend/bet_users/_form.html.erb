<div class="row">
   <div class="block-center mt-4 col-sm-12 col-md-8 col-lg-6 ">
      <!-- START card-->
      <div class="card card-dark card-default">
         <div class="card-body">
            <p class="text-center py-2">New User</p>
            <%= form_with(model: @user,url: backend_users_path, local: true, :html => {:"data-parsley-validate" => ''}, class: "mb-lg") do |f| %>

            <% if user.errors.any? %>
            <div id="error_explanation">
               <h2 class="errors"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
            </div>
            <% end %>

            <div class="form-row form-group">
               <div class="col-sm-6 col-md-6">
                  <%= f.label :first_name, "First Name", class:"col-md-6 col-form-label" %>
                  <%= f.text_field :first_name, {class: "form-control", id: "user_first_name", placeholder: "First Name"} %>
                  <div ><%= model_error(@user, :first_name)%></div>
               </div>
               <div class="col-sm-6 col-md-6">
                  <%= f.label :last_name, "Last Name", class:"col-md-6 col-form-label" %>
                  <%= f.text_field :last_name, {:class=>"form-control", id: "user_last_name", placeholder: "Last Name"}%>
                  <div ><%= model_error(@user, :last_name)%></div>
               </div>
            </div>
            <div class="form-row form-group">
               <div class="col-sm-6 col-md-6">
                  <%= f.label :phone_number, "Phone Number", class:"col-md-6 col-form-label" %>
                  <%= f.text_field :phone_number, {class: "form-control", id: "user_phone_number", placeholder: "Phone Number"} %>
                  <div ><%= model_error(@user, :phone_number)%></div>
               </div>
               <div class="col-sm-6 col-md-6">
                  <%= f.label :nationality, "Nationality", class:"col-md-6 col-form-label" %>
                  <%= f.text_field :nationality, {:class=>"form-control", id: "user_nationality", placeholder: "Nationality"}%>
                  <div ><%= model_error(@user, :nationality)%></div>
               </div>
            </div>

            <div class="form-row form-group">
               <div class="col-sm-6 col-md-6">
                  <%= f.label :password, "Password", class:"col-md-6 col-form-label" %>
                  <%= f.password_field :password, {class: "form-control", id: "user_password", placeholder: "Password"} %>
                  <div ><%= model_error(@user, :password)%></div>
               </div>
               <div class="col-sm-6 col-md-6">
                  <%= f.label :password_confirmation, "Confirm Password", class:"col-md-12 col-form-label" %>
                  <%= f.password_field :password_confirmation, {:class=>"form-control", id: "user_password_confirmation", placeholder: "Confirm Password"}%>
                  <div ><%= model_error(@user, :password_confirmation)%></div>
               </div>
            </div>

            <div class="w-100 col-12 ">
               <%= f.submit "Create User", class: "btn btn-block btn-danger mt-lg" %>
            </div>
            <% end %>
         </div>
      </div>
      <!-- END card-->
   </div>
</div>
