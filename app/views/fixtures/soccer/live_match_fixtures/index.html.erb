<div class="content-heading">
    <div>
        <span>Soccer Fixtures</span>
        <small>Live</small>
    </div>
</div>

<div class="table-responsive container-fluid">
  <!-- table table-striped table-bordered table-hover -->
  <table class="fixture table table-striped table-bordered table-hoverlarge-12 columns large-centered">
    <thead>
      <tr>
        <th >No</th>
        <th >Time</th>
        <th >Game</th>
        <th >Tournament Name</th>
        <th >Event ID</th>
        <th >Status</th>
        <th >Booked</th>
        <th >Action</th>
      </tr>
    </thead>
    <tbody>
			<% @fixtures.each_with_index do |fixture, i| %>
				<tr>
					<td><%= (i+1)%></td>
          <td><%= fixture.scheduled_time.to_datetime.strftime("%b %d, %Y %I:%M%P") %></td>
          <td><%= fixture.comp_one_name %>  - <%= fixture.comp_two_name%> </td>
          <td><%= fixture.tournament_name %></td>
          <td><%= fixture.event_id %></td>
          <td><%= fixture.status %></td>
          <td><%= fixture.booked.to_s.capitalize %></td>
          <td>
            <% if fixture.live_odds == "bookable" && fixture.booked == false %>
              <%= button_to "Book", fixtures_soccer_live_match_fixtures_path(id: fixture.id), method: :patch, to: "controller#method", :class => 'btn btn-xs btn-success' %>
            <% end %>
          </td>
				</tr>
			<% end %>
    </tbody>
  </table>
	<%= paginate @fixtures %>
</div>
