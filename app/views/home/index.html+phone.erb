<% provide(:title, "Home") %>

<!-- First Banner here -->
<%= render "banner" %>
<div class="game-box" id="featured">
    <div class="card">
        <div class="card-header">
            <h3>Live Fixtures - Soccer </h3><i class=" blinking match-time fas fa-bolt fa-lg fa-fw mr-2"></i>
        </div>
        <% if !@live_fixtures.empty? %>
        <div class="card-body">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <table class="table table-borderless ">
                        <thead>
                          <tr>
                                <th class="col-4">Teams</th>
                                <th class="col-2">Score</th>
                                <th class="col-2">1</th>
                                <th class="col-2">X</th>
                                <th class="col-2">2</th>
                            </tr>
                        </thead>
                        <tbody id="fixture-table-body-live" data-controller="refresh" data-refresh-interval="60000" data-refresh-url="<% home_page_refresh_path %>" data-refresh-method="GET">
                            <%= render partial: 'live_fixture_table' %>
                        </tbody>
                    </table>
                    <div class="table-navigation">
                        <!-- show more link -->
                        <div class="text-center mb-2">
                            <%= link_to "Show More".html_safe, fixtures_soccer_lives_path, id: "live-tab", class: "match-time show-more" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% else %>
            <div class="card-body">
                <div class="tab-content" id="">
                    <div class="tab-pane fade show active" role="tabpanel" aria-labelledby="home-tab">
                        <h6 class=" event">No Live Matches</h6>                
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>

<!-- Second banner -->
<%= render "banner1"%>

<!-- Start Featured Fixtures Table -->

<div class="game-box" id="featured">
    <div class="card">
        <div class="card-header">
            <h3>Featured Fixtures - Soccer</h3> <i class='fas fa-fire fa-lg fa-fw mr-2 match-time'></i>
        </div>
        <% if !@featured.empty? %>
          <div class="card-body">
              <div class="tab-content" id="myTabContent">
                  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                      <table class="table table-borderless ">
                          <thead>
                            <tr>
                                <th class="col-2">Date</th>
                                <th class="col-4">Teams</th>
                                <th class="col-3">Tournament</th>
                                <th class="col-1">1</th>
                                <th class="col-1">X</th>
                                <th class="col-1">2</th>
                            </tr>
                          </thead>
                          <tbody id="fixture-table-body-1" data-controller="refresh" data-refresh-interval="60000" data-refresh-url="<% home_page_refresh_path %>" data-refresh-method="GET">
                              <%= render partial: 'feat_prematch_fixture_table' %>
                          </tbody>
                      </table>
                      <div class="table-navigation">
                          <div class="text-center mb-2">
                            <%= link_to "Show More".html_safe, fixtures_soccer_featured_path, id: "live-tab", class: "match-time show-more" %>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
        <% else %>
            <div class="card-body">
                <div class="tab-content" id="">
                    <div class="tab-pane fade show active" role="tabpanel" aria-labelledby="home-tab">
                        <h6 class=" event">No Featured Matches</h6>                
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>

<!-- End Featured Fixtures Table -->

<!-- Third banner -->
<%= render "banner2"%>

<!-- Start All Fixtures Table -->
<div class="game-box">

    <div class="card">
        <div class="card-header upcoming">
            <h3>Upcoming - Soccer <i class='fas fa-futbol fa-lg fa-fw mr-2 match-time'></i></h3>
        </div>
        <div class="card-body">
            <div class="tab-content" id="myTabContent">
                <% if @prematch_fixtures.present? %>
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab" data-controller="">
                
                    
                    <table class="table table-borderless ">
                        <thead>
                        <tr>
                            <th class="col-2">Date</th>
                            <th class="col-4">Teams</th>
                            <th class="col-3">Tournament</th>
                            <th class="col-1">1</th>
                            <th class="col-1">X</th>
                            <th class="col-1">2</th>
                        </tr>
                        </thead>
                        <tbody id="fixture-table-body" data-target="match-fixtures.fixtures" data-controller="refresh" data-refresh-interval="60000" data-refresh-url="<% home_page_refresh_path %>" data-refresh-method="GET">
                            <%= render partial: 'pre_match_fixture_table' %>
                        </tbody>
                        </table>
                        <div id="bottom">
                            <div class="d-flex justify-content-center">
                                <div data-target="match-fixtures.spinner" id="spinner"></div>
                            </div>
                           <div class="table-navigation">
                              <div class="text-center mb-2">
                                <%= link_to "Show More".html_safe, fixtures_soccer_pres_path, id: "pre-tab", 
                                class: "match-time show-more" %>
                              </div>
                           </div>
                        </div>
                    </div>
                <% else %>
                    <td>
                        <h6 class="event">No Upcoming Events</h6>
                    </td>
                <% end %> 
            </div>
        </div>
    </div>
</div>
<!-- End All Fixtures Table -->
