<div class="content-heading">
    <div>
        <span>Fixtures</span>
        <small>Soccer Fixtures</small>
    </div>
</div>

<div class="table-responsive container-fluid">
  <!-- table table-striped table-bordered table-hover -->
  <table class="fixture table table-striped table-bordered table-hoverlarge-12 columns large-centered">
    <thead>
      <tr>
        <th class="col">No</th>
        <th class="col">Event ID</th>
        <th class="col">Time</th>
        <th class="col">Live Odds</th>
        <th class="col">Status</th>
        <th class="col">Booked</th>
        <th class="col">Tournament Round</th>
        <th class="col">Betradar ID</th>
        <th class="col">Season ID</th>
        <th class="col">Season Name</th>
        <th class="col">Tournament ID</th>
        <th class="col">Tournament Name</th>
        <th class="col">Sports ID</th>
        <th class="col">Sports</th>
				<th class="col">Category ID</th>
        <th class="col">Category</th>
        <th class="col">Comp One ID</th>
        <th class="col">Comp One Name</th>
        <th class="col">Comp One Gender</th>
        <th class="col">Comp One Abb</th>
        <th class="col">Comp One Qualifier</th>
        <th class="col">Comp Two ID</th>
        <th class="col">Comp Two Name</th>
        <th class="col">Comp Two Gender</th>
        <th class="col">Comp Two Abb</th>
        <th class="col">Comp Two Qualifier</th>
        <th class="col">Action</th>
      </tr>
    </thead>
    <tbody>
			<% @fixtures.each_with_index do |fixture, i| %>
				<tr>
					<td><%= (i+1)%></td>
					<td><%= fixture.event_id %></td>
					<td><%= fixture.scheduled_time.to_datetime.strftime("%b %d, %Y %I:%M%P") %></td>
					<td><%= fixture.live_odds %></td>
					<td><%= fixture.status %></td>
          <td><%= fixture.booked %></td>
					<td><%= fixture.tournament_round %></td>
          <td><%= fixture.betradar_id%></td>
					<td><%= fixture.season_id%></td>
					<td><%= fixture.season_name %></td>
					<td><%= fixture.tournament_id %></td>
          <td><%= fixture.tournament_name %></td>
          <td><%= fixture.sport_id %></td>
          <td><%= fixture.sport %></td>
					<td><%= fixture.category_id %></td>
          <td><%= fixture.category%></td>
          <td><%= fixture.comp_one_id%></td>
          <td><%= fixture.comp_one_name%></td>
          <td><%= fixture.comp_one_gender%></td>
          <td><%= fixture.comp_one_abb%></td>
          <td><%= fixture.comp_one_qualifier%></td>
          <td><%= fixture.comp_two_id%></td>
          <td><%= fixture.comp_two_name%></td>
          <td><%= fixture.comp_two_gender%></td>
          <td><%= fixture.comp_two_abb%></td>
          <td><%= fixture.comp_two_qualifier%></td>
          <% if fixture.live_odds == "bookable" && fixture.booked == false %>
            <td><%= button_to "Book", soccer_fixture_path(fixture.id), method: :put, :class => 'btn btn-xs btn-success' %></td>
          <% else %>
            <td></td>
          <% end %>
				</tr>
			<% end %>
    </tbody>
  </table>
	<%= paginate @fixtures %>
</div>
