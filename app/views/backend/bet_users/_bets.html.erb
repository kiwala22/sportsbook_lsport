
<div class="table-responsive">
    <!-- table table-striped table-bordered table-hover -->
    <table class="table table-striped table-borderless ">
        <thead>
        <tr>
            <th>Fixture</th>
            <th>Odds</th>
            <th>Status</th>
            <th>Result</th>
            <th>BetSlip ID</th>
            <th>Product</th>
            <th>Market</th>
            <th>Outcome</th>
            <th>Description</th>
            <th>User</th>
            <th>Time</th>
        </tr>
        </thead>
        <tbody>
                <% @bets.each do |bet| %>
            <tr>
                <td>
                        
                    <% fixture = Fixture.find(bet.fixture_id)%>
                    <%= fixture.part_one_name %> - <%= fixture.part_two_name %>
                </td>
                            <td><%= bet.odds %></td>
                            <td><%= bet.status %></td>
                <td>
                    <% if bet.result.nil? %>
                    N/A
                    <% else %>
                    <%= bet.result %>
                    <% end %>
                </td>
                            <td><%= bet.bet_slip_id %></td>
                            <td><%= bet.product %></td>
                            <td><%= bet.market_identifier %></td>
                <td><%= bet.outcome %></td>
                            <td><%= bet.outcome_desc %></td>
                <td><%= bet.user_id %></td>
                            <td><%= local_time(bet.created_at, format: "%d/%m/%y, %l:%M%P") %></td>
                    </tr>
                <% end %>
        </tbody>
    </table>
        <%= paginate @bets if @bets.present? %>
</div>
            