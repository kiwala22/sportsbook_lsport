<div class="content-heading">
    <div>
        <span>Slip Bonuses</span>
        <small>Slip Bonuses</small>
    </div>
</div>


<div class="table-responsive">
	<table class="table table-striped table-bordered table-hoverlarge-12 columns large-centered">
		<thead>
			<tr>
				<th>No #</th>
        		<th>Min Accumulator</th>
        		<th>Max Accumulator</th>
				<th>Multipler</th>
				<th>Expiry</th>
				<th>Status</th>
				<th>Create Time</th>

			</tr>
		</thead>
		<tbody>
			<% @slip_bonuses.each_with_index do |bonus, index| %>
			<tr>
				<td><%= (index + 1) %></td>
        		<td><%= bonus.min_accumulator %></td>
        		<td><%= bonus.max_accumulator %></td>
				<td><%= bonus.multiplier %></td>
				<td><%= local_time(bonus.expiry,"%d/%m/%Y %H:%M %p") %></td>
				<td>
					<% if bonus.status == 'Active'%>
						<span class="badge badge-success"><%= bonus.status %></span>
					<%else%>
						<span class="badge badge-danger"><%= bonus.status %></span>
					<%end%>

					</td>
				<td><%= local_time(bonus.created_at, "%d/%m/%Y %H:%M %p") %></td>
			</tr>
			<% end %>
		</tbody>
	</table>

</div>
