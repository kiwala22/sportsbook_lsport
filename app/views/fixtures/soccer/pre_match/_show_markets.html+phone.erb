<div class="card-header">
   <h6>
         <%= fixture.comp_one_name %> -
         <%= fixture.comp_two_name %>,
         <%= fixture.tournament_name %>
         <%= fixture.category %>
   </h6>
</div>
<div class="fix-body">
   <div class='row'>
         <div class="col-sm-12">
            <% if fixture.market1_pre.present? && fixture.market1_pre.status == "Active" %>
            <div class="market-label market-label-fixture">
               <div class="row">
                     <div class="col-lg-12 ">
                        Match Result 1X2 - FT
                     </div>
               </div>
            </div>
            <div class="market-odds mb-3 mt-3">
               <div class="row">
                     <div class="col-xs-6 col-md-4">
                        <%= link_to(add_bet_path(outcome_id: "1", fixture_id: fixture.id, market: "Market1Pre", outcome_desc: "1X2 FT - 1") , class: "btn btn-light wagger-btn intialise_input", remote: true, method: :post )  do %>
                           <span>Home Win</span>
                           <span class="wagger-amt" id=<%="pre_1_#{fixture.id}"%>> <%= fixture.market1_pre.outcome_1 %>  </span>
                        <% end %>
                     </div>
                     <div class="col-xs-6 col-md-4">
                        <%= link_to(add_bet_path(outcome_id: "2", fixture_id: fixture.id, market: "Market1Pre", outcome_desc: "1X2 FT - X") , class: "btn btn-light wagger-btn intialise_input", remote: true, method: :post )  do %>
                           <span>Draw</span>
                           <span class="wagger-amt" id=<%="pre_2_#{fixture.id}"%>> <%= fixture.market1_pre.outcome_2 %>  </span>
                        <% end %>
                     </div>
                     <div class="col-xs-6 col-md-4">
                        <%= link_to(add_bet_path(outcome_id: "3", fixture_id: fixture.id, market: "Market1Pre", outcome_desc: "1X2 FT - 2") , class: "btn btn-light wagger-btn intialise_input", remote: true, method: :post )  do %>
                           <span>Away Win</span>
                           <span class="wagger-amt" id=<%="pre_3_#{fixture.id}"%>> <%= fixture.market1_pre.outcome_3 %>  </span>
                        <% end %>
                     </div>
               </div>
            </div>
            <% end %>
            <% if fixture.market10_pre.present? && fixture.market10_pre.status == "Active" %>
            <div class="market-label market-label-fixture">
               <div class="row">
                     <div class="col-sm-12 ">
                        Double Chance - FT
                     </div>
               </div>
            </div>
            <div class="market-odds mb-3 mt-3">
               <div class="row market">
                     <div class="col-xs-6 col-md-4">
                        <%= link_to(add_bet_path(outcome_id: "9", fixture_id: fixture.id, market: "Market10Pre", outcome_desc:  "Double Chance FT - HW/DR") , class: "btn btn-light wagger-btn intialise_input", remote: true, method: :post )  do %>
                           <span>Home Win / Draw</span>
                           <span class="wagger-amt" id=<%="pre_9_#{fixture.id}"%>> <%= fixture.market10_pre.outcome_9 %>  </span>
                        <% end %>
                     </div>
                     <div class="col-xs-6 col-md-4">
                        <%= link_to(add_bet_path(outcome_id: "10", fixture_id: fixture.id, market: "Market10Pre", outcome_desc: "Double Chance FT - HW/AW") , class: "btn btn-light wagger-btn intialise_input", remote: true, method: :post )  do %>
                           <span>Home / Away</span>
                           <span class="wagger-amt" id=<%="pre_10_#{fixture.id}"%>> <%= fixture.market10_pre.outcome_10 %>  </span>
                        <% end %>
                     </div>
                     <div class="col-xs-6 col-md-4">
                        <%= link_to(add_bet_path(outcome_id: "11", fixture_id: fixture.id, market: "Market10Pre", outcome_desc: "Double Chance FT - DR/AW") , class: "btn btn-light wagger-btn intialise_input", remote: true, method: :post )  do %>
                           <span>Draw / Away Win</span>
                           <span class="wagger-amt" id=<%="pre_11_#{fixture.id}"%>> <%= fixture.market10_pre.outcome_11 %>  </span>
                        <% end %>
                     </div>
               </div>
            </div>
            <% end %>
            <% if fixture.market16_pre.present? && fixture.market16_pre.status == "Active" %>
            <div class="market-label market-label-fixture">
               <div class="row">
                     <div class="col-sm-12 ">
                        Handicap 1 Goal - FT
                     </div>
               </div>
            </div>
            <div class="market-odds mb-3 mt-3">
               <div class="row">
                     <div class="col-xs-6">
                        <%= link_to(add_bet_path(outcome_id: "1714", fixture_id: fixture.id, market: "Market16Pre", outcome_desc: "Handicap 1 FT -  HW") , class: "btn btn-light wagger-btn intialise_input", remote: true, method: :post )  do %>
                           <span>Home -1</span>
                           <span class="wagger-amt" id=<%="pre_1714_#{fixture.id}"%>> <%= fixture.market16_pre.outcome_1714 %>  </span>
                        <% end %>
                     </div>
                     <div class="col-xs-6">
                        <%= link_to(add_bet_path(outcome_id: "1715", fixture_id: fixture.id, market: "Market16Pre", outcome_desc: "Handicap 1 FT -  AW") , class: "btn btn-light wagger-btn intialise_input", remote: true, method: :post )  do %>
                           <span>Away -1</span>
                           <span class="wagger-amt" id=<%="pre_1715_#{fixture.id}"%>> <%= fixture.market16_pre.outcome_1715 %>  </span>
                        <% end %>
                     </div>

               </div>
            </div>
            <% end %>
            <% if fixture.market18_pre.present? && fixture.market18_pre.status == "Active" %>
            <div class="market-label market-label-fixture">
               <div class="row">
                     <div class="col-sm-12 ">
                        Under 2.5 / Over 2.5 - FT
                     </div>
               </div>
            </div>
            <div class="market-odds mb-3 mt-3">
               <div class="row">
                     <div class="col-sm-6">
                        <%= link_to(add_bet_path(outcome_id: "13", fixture_id: fixture.id, market: "Market18Pre", outcome_desc: "Total 2.5 FT - Under 2.5") , class: "btn btn-light wagger-btn intialise_input", remote: true, method: :post )  do %>
                           <span>Under 2.5</span>
                           <span class="wagger-amt" id=<%="pre_13_#{fixture.id}"%>> <%= fixture.market18_pre.outcome_13 %>  </span>
                        <% end %>
                     </div>
                     <div class="col-sm-6">
                        <%= link_to(add_bet_path(outcome_id: "12", fixture_id: fixture.id, market: "Market18Pre", outcome_desc: "Total 2.5 FT - Over 2.5") , class: "btn btn-light wagger-btn intialise_input", remote: true, method: :post )  do %>
                           <span>Over 2.5</span>
                           <span class="wagger-amt" id=<%="pre_12_#{fixture.id}"%>> <%= fixture.market18_pre.outcome_12 %>  </span>
                        <% end %>
                     </div>
               </div>
            </div>

            <% end %>
            <% if fixture.market29_pre.present? && fixture.market29_pre.status == "Active" %>
            <div class="market-label market-label-fixture">
               <div class="row">
                     <div class="col-sm-12 ">
                        Both to Score - FT
                     </div>
               </div>
            </div>
            <div class="market-odds mb-3 mt-3">
               <div class="row">
                     <div class="col-sm-6">
                        <%= link_to(add_bet_path(outcome_id: "74", fixture_id: fixture.id, market: "Market29Pre", outcome_desc: "Both To Score FT - Yes") , class: "btn btn-light wagger-btn intialise_input", remote: true, method: :post )  do %>
                           <span>Yes</span>
                           <span class="wagger-amt" id=<%="pre_74_#{fixture.id}"%>> <%= fixture.market29_pre.outcome_74 %>  </span>
                        <% end %>
                     </div>
                     <div class="col-sm-6">
                        <%= link_to(add_bet_path(outcome_id: "76", fixture_id: fixture.id, market: "Market29Pre", outcome_desc: "Both To Score FT - No") , class: "btn btn-light wagger-btn intialise_input", remote: true, method: :post )  do %>
                           <span>No</span>
                           <span class="wagger-amt" id=<%="pre_76_#{fixture.id}"%>> <%= fixture.market29_pre.outcome_76 %>  </span>
                        <% end %>
                     </div>
               </div>
            </div>
            <% end %>
         </div>
   </div>
</div>